@model IEnumerable<ABC_Retail.ViewModels.ProductViewModel>

@{
	ViewData["Title"] = "Products";
}

<h1>Products</h1>

<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Price</th>
			<th>Description</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var product in Model)
		{
			<tr>
				<td>@product.Name</td>
				<td>@product.Price.ToString("C", new System.Globalization.CultureInfo("en-ZA"))</td>
				<td>@product.Description</td>
				<td>
					<a href="@Url.Action("Manage", "Product", new { id = product.Id })">Manage</a>
				</td>
			</tr>
		}
	</tbody>
</table>
