@model IEnumerable<ABC_Retail.ViewModels.ProductViewModel>

@{
	ViewData["Title"] = "Products";
}

<h1>Products</h1>

@if (!Model.Any())
{
	<p>No products available. <a href="@Url.Action("Create", "Product")">Add a new product</a></p>
}
else
{
	<a class="btn btn-primary mb-3" href="@Url.Action("Create", "Product")">Add Product</a>

	<table class="table">
		<thead>
			<tr>
				<th>Name</th>
				<th>Price</th>
				<th>Description</th>
				<th>Quantity</th>
				<th>Purchase</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var product in Model)
			{
				<tr>
					<td>@product.Name</td>
					<td>@product.Price.ToString("C", new System.Globalization.CultureInfo("en-ZA"))</td>
					<td>@product.Description</td>
					<td class="product-quantity-container">@Html.Partial("_ProductQuantity", product)</td>
					<td>
						<a class="btn btn-success mb-3 purchase-button" data-id="@product.Id">Purchase</a>
					</td>
					<td>
						<a href="@Url.Action("Manage", "Product", new { id = product.Id })">Manage</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
}