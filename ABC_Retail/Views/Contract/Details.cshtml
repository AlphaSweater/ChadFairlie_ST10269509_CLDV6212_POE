@model ABC_Retail.ViewModels.ContractFileViewModel


<div style="display: flex; gap: 30px">
	<div class="actions">
		<h2>Contract Details</h2>
		<a href="@Url.Action("Index", "Contract")" class="btn btn-secondary">Back to List</a>
		<form asp-action="Delete" method="post" style="display:inline;">
			<input type="hidden" name="fileName" value="@Model.FileName" />
			<input type="submit" class="btn btn-danger" value="Delete Contract" />
		</form>
	</div>

	<hr />

	<div class="contract-viewer" style="flex-grow: 2">
		<object data="@Model.InlineUrl" type="application/pdf" width="100%" height="550px">
			<p>Your browser does not support PDF viewing. Please <a href="@Model.Url">download</a> the contract to view it.</p>
		</object>
	</div>
</div>